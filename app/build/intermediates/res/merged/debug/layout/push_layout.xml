<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/menu_push"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_bg"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        android:gravity="left|top"
        android:hint="物品名称.如充电宝"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:textColor="@color/clr_sub_text"
        android:textColorHint="@color/clr_sub_text"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        style="@style/w_match_h_wrap"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color_white"
            android:padding="10dp"
            android:gravity="left|top"
            android:hint="物品说明..."
            android:inputType="textMultiLine"
            android:maxLength="64"
            android:textColor="@color/clr_sub_text"
            android:textColorHint="@color/clr_sub_text"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_tip"
            style="@style/w_match_h_wrap"
            android:background="@color/color_white"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:text="0/64"/>

        <LinearLayout
            style="@style/w_match_h_wrap"
            android:layout_height="100dp"
            android:background="@drawable/shape_bk"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layout_img"
                style="@style/w_wrap_h_wrap"
                android:orientation="horizontal"/>

            <ImageView
                android:id="@+id/img_plus"
                style="@style/w_wrap_h_wrap"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/plus"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        android:gravity="left|top"
        android:hint="交易地址.如图书馆"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:textColor="@color/clr_sub_text"
        android:textColorHint="@color/clr_sub_text"
        android:textSize="10sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        />
    <EditText
        android:id="@+id/et_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|top"
        android:hint="截止时间.如一小时"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:textColor="@color/clr_sub_text"
        android:textColorHint="@color/clr_sub_text"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择分类"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <RadioGroup
        android:id="@+id/et_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >
        <RadioButton
            android:id="@+id/checkDianzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子产品"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/checkTushu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="图书"
            />
        <RadioButton
            android:id="@+id/checkYishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="衣饰"
            />
        <RadioButton
            android:id="@+id/checkShenghuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="生活用品"
            />
    </RadioGroup>
</LinearLayout>